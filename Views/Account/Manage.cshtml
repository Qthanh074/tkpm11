@model TKPM.ViewModels.ManageAccountViewModel

@{
    ViewData["Title"] = "Quản lý tài khoản";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3 mb-4">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Thông tin tài khoản</h4>
                </div>
                <div class="card-body">
                    <p class="fs-5"><strong>Email:</strong> @User.Identity?.Name</p>

                    @if (!string.IsNullOrEmpty(Model.ChangePassword?.FullName))
                    {
                        <p class="fs-5"><strong>Họ tên:</strong> @Model.ChangePassword.FullName</p>
                    }
                    else
                    {
                        <p class="text-muted">Bạn chưa cập nhật họ tên.</p>
                    }

                    <hr />

                    <h5 class="mt-3">🔒 Đổi mật khẩu</h5>
                    <form asp-action="ChangePassword" method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>

                        <div class="form-group mb-3">
                            <label asp-for="ChangePassword.CurrentPassword" class="form-label">Mật khẩu hiện tại</label>
                            <input asp-for="ChangePassword.CurrentPassword" class="form-control" type="password" />
                            <span asp-validation-for="ChangePassword.CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ChangePassword.NewPassword" class="form-label">Mật khẩu mới</label>
                            <input asp-for="ChangePassword.NewPassword" class="form-control" type="password" />
                            <span asp-validation-for="ChangePassword.NewPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="ChangePassword.ConfirmPassword" class="form-label">Xác nhận mật khẩu mới</label>
                            <input asp-for="ChangePassword.ConfirmPassword" class="form-control" type="password" />
                            <span asp-validation-for="ChangePassword.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-success w-100">Lưu mật khẩu mới</button>
                    </form>
                </div>
            </div>

            <!-- ✅ LỊCH SỬ ĐƠN HÀNG -->
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-dark text-white text-center">
                    <h5 class="mb-0">📦 Lịch sử đơn hàng</h5>
                </div>
                <div class="card-body">
                    @if (Model.Orders == null || !Model.Orders.Any())
                    {
                        <p class="text-muted">Bạn chưa có đơn hàng nào.</p>
                    }
                    else
                    {
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Mã đơn</th>
                                    <th>Ngày đặt</th>
                                    <th>Tổng tiền</th>
                                    <th>Trạng thái</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td>@order.Id</td>
                                        <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                                        <td>@order.TotalAmount.ToString("N0") VNĐ</td>
                                        <td>@order.Status</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                </div>
            </div>

            <div class="mt-3 d-flex justify-content-between">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">⬅️ Về Trang Chủ</a>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger">Đăng xuất</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
